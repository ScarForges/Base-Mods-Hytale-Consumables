    },
    "Interactions": {
        "Primary": "Block_Primary",
        "Secondary": "Root_Secondary_Consume_Potion"
    },
    "InteractionVars": {
        "RemoveEffect": {
            "Interactions": [{ "Type": "Simple" }]
        },
        "Effect": {
            "Interactions": [
                { "Type": "ApplyEffect", "EffectId": "Efecto_Curacion" },
                { "Type": "Simple", "StatModifiers": { "Health": 20 } }
